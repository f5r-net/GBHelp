<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GBHelp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/primary</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary_light</item>
        <item name="android:windowBackground">@color/primary_surface</item>
        <item name="android:colorForeground">@color/icon_secondary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/secondary_text</item>

    </style>


    <style name="Theme.GBHelp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.GBHelp.MediaViewNoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.GBHelp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GBHelp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#ff007272</item>
    </style>


    <style name="ListItemTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemSubtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/list_item_sub_title</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.GBHelp.NoActionBar.AppSettings">
        <item name="android:textColorSecondary">@color/summary</item>
    </style>

    <style name="Theme.GBHelp.NoActionBar.About">
        <item name="colorControlNormal">@color/aboutScreenBackIcon</item>
    </style>

    <style name="Widget.Material.AppBarLayout" parent="@android:style/Widget">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Widget.Material.Light.CollapsingToolbar" parent="@android:style/Widget">
        <item name="android:minHeight">?actionBarSize</item>
        <!--
        <item name="collapseTitleTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse</item>
        <item name="extendSubTitleTextAppearance">@style/TextAppearance.Material.Light.CollapsingToolbar.Expanded.Subtitle</item>
        <item name="extendTitleTextAppearance">@style/TextAppearance.Material.Light.CollapsingToolbar.Expanded</item>
        -->
        <item name="statusBarScrim">@android:color/transparent</item>
    </style>

    <style name="SeslCollapsingToolbarLayout" parent="@style/Widget.Material.Light.CollapsingToolbar" />

    <style name="SeslToolbar" parent="@style/Theme.AppCompat.Light" />

    <style name="RobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Settings.About.Text.AppName" parent="@style/RobotoLight">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/aboutScreenAppName</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Custom" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:textSize">17.0sp</item>
        <!--
        <item name="buttonCornerRadius">22.0dip</item>
        -->
    </style>

    <style name="Widget.AppCompat.Button.Custom" parent="@style/Base.Widget.AppCompat.Button.Custom" />

    <style name="Settings.About.Button" parent="@style/Widget.AppCompat.Button.Custom">
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sec-roboto-light</item>
    </style>

    <style name="Settings.About.Text.Button" parent="@style/RobotoMedium">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Settings.About.Text.Button.Tnc" parent="@style/Settings.About.Text.Button">
        <item name="android:textColor">#ff252525</item>
    </style>

    <style name="Settings.About.Button.Tnc" parent="@style/Settings.About.Button">
        <item name="android:textAppearance">@style/Settings.About.Text.Button.Tnc</item>
        <item name="android:background">@drawable/basic_contained_button</item>
    </style>

    <style name="Settings.About.Text.Button.Update" parent="@style/Settings.About.Text.Button">
        <item name="android:textColor">#fffafafa</item>
    </style>

    <style name="Settings.About.Button.Update" parent="@style/Settings.About.Button">
        <item name="android:textAppearance">@style/Settings.About.Text.Button.Update</item>
        <item name="android:background">@drawable/basic_contained_button_colored</item>
        <item name="android:minHeight">40dp</item>
    </style>


    <style name="RobotoRegular">
        <item name="android:fontFamily">sec-roboto-light</item>
    </style>

    <style name="Settings.About.Text.Version" parent="@style/RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff909090</item>
    </style>



    <style name="WA.TextAppearance" parent="@android:style/TextAppearance" />

    <style name="WA.TextAppearance.ConversationRowDate" parent="@style/WA.TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/conversation_row_date</item>
    </style>
    <style name="WA.TextAppearance.ConversationRowDateRight" parent="@style/WA.TextAppearance.ConversationRowDate">
        <item name="android:textColor">@color/conversation_row_date_right</item>
    </style>
    <style name="WA.TextAppearance.ConversationRowMessage" parent="@style/WA.TextAppearance">
        <item name="android:textSize">@dimen/conversation_text_row_tv</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>