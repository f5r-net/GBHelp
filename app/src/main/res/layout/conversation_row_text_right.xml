<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40.0dip"
    android:background="@drawable/balloon_outgoing_normal"
    android:gravity="center|right"
    android:minHeight="30.0dip"
    android:orientation="horizontal"
    android:padding="7dp">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="@dimen/conversation_row_inner_item_padding"
        android:paddingTop="2.0dip"
        android:paddingRight="@dimen/conversation_row_inner_item_padding"
        android:paddingBottom="5.0dip"
        android:textAppearance="@style/WA.TextAppearance.ConversationRowMessage" />

    <LinearLayout
        android:id="@+id/date_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|right"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="5.0dip"
        android:paddingBottom="1.0dip">

        <TextView
            android:id="@+id/date"
            style="@style/WA.TextAppearance.ConversationRowDateRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:18" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4.0dip"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>